{
  "name": "piratesvscode",
  "publisher": "Seorgiy",
  "displayName": "PiratesVSCode",
  "description": "Extension for working with Storm-Engine scripts https://github.com/storm-devs/storm-engine/",
  "version": "2.1.0",
  "engines": {
    "vscode": "^1.101.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/seorgiy/piratesvscode"
  },
  "icon": "assets/icon.jpg",
  "galleryBanner": {
    "color": "#91b9ba",
    "theme": "dark"
  },
  "categories": [
    "Other",
    "Snippets"
  ],
  "activationEvents": [
    "onLanguage:c"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "grammars": [
      {
        "path": "./syntaxes/codeblock.json",
        "scopeName": "source.c",
        "injectTo": [
          "source.c"
        ]
      }
    ],
    "snippets": [
      {
        "language": "c",
        "path": "./snippets/piratesvscode.json"
      }
    ],
    "configuration": {
      "title": "PiratesVSCode",
      "type": "object",
      "properties": {
        "piratesConfig.preferredLanguage": {
          "type": "string",
          "default": "russian",
          "enum": [
            "russian",
            "english",
            "french",
            "italian",
            "german",
            "polish",
            "spanish"
          ],
          "description": "Language for the on hover translation"
        }
      }
    },
    "commands": [
      {
        "command": "piratesvscode.openCurrentKeyFile",
        "title": "CL open last translation file"
      },
      {
        "command": "piratesvscode.coordinatesX",
        "title": "CL change coordinates X"
      },
      {
        "command": "piratesvscode.coordinatesY",
        "title": "CL change coordinates Y"
      },
      {
        "command": "piratesvscode.coordinatesXResize",
        "title": "CL resize X"
      },
      {
        "command": "piratesvscode.coordinatesYResize",
        "title": "CL resize Y"
      },
      {
        "command": "piratesvscode.openLogsAll",
        "title": "CL open logs all"
      },
      {
        "command": "piratesvscode.openLogsCompile",
        "title": "CL open logs compile"
      },
      {
        "command": "piratesvscode.openLogsSystem",
        "title": "CL open logs system"
      },
      {
        "command": "piratesvscode.openLogsError",
        "title": "CL open logs error"
      },
      {
        "command": "piratesvscode.translaterussian",
        "title": "CL русский"
      },
      {
        "command": "piratesvscode.translateenglish",
        "title": "CL english"
      },
      {
        "command": "piratesvscode.translatefrench",
        "title": "CL french"
      },
      {
        "command": "piratesvscode.translategerman",
        "title": "CL german"
      },
      {
        "command": "piratesvscode.translatespanish",
        "title": "CL spanish"
      },
      {
        "command": "piratesvscode.translatepolish",
        "title": "CL polish"
      },
      {
        "command": "piratesvscode.translateitalian",
        "title": "CL italian"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/ini": "^4.1.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.101.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.5.0",
    "esbuild": "^0.25.5",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "ini": "^5.0.0"
  }
}